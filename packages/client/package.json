{
  "name": "del-sdk-client",
  "version": "1.0.0",
  "author": "BOSagora Foundation",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/sdk-client.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "TESTING=true tsdx test --verbose --runInBand",
    "test:methods": "TESTING=true tsdx test test/methods.test.ts --verbose --runInBand",
    "test:client": "TESTING=true tsdx test test/client.test.ts --verbose --runInBand",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "clean": "rm -Rf .turbo dist"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint --fix"
    }
  },
  "prettier": {
    "printWidth": 120,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "es5",
    "tabWidth": 4,
    "useTabs": false
  },
  "size-limit": [
    {
      "path": "dist/sdk-client.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/sdk-client.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@ethersproject/experimental": "^5.7.0",
    "@size-limit/preset-small-lib": "^7.0.8",
    "@types/express": "^4.17.8",
    "bigint-buffer": "^1.1.5",
    "express": "^4.17.1",
    "express-validator": "^6.14.0",
    "ganache": "^7.9.1",
    "glob": "^8.0.3",
    "husky": "^7.0.4",
    "size-limit": "^7.0.8",
    "solc": "0.4.17",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.6.2",
    "web3": "^1.7.3"
  },
  "dependencies": {
    "@ethersproject/abstract-signer": "^5.7.0",
    "@ethersproject/bignumber": "^5.7.0",
    "@ethersproject/constants": "^5.7.0",
    "@ethersproject/contracts": "^5.7.0",
    "@ethersproject/networks": "npm:boa-networks@^5.7.2",
    "@ethersproject/providers": "^5.7.0",
    "@ethersproject/wallet": "^5.7.0",
    "del-osx-lib": "^1.0.6",
    "del-sdk-common": "^1.0.0",
    "dotenv": "^16.3.1"
  },
  "jest": {
    "testEnvironment": "../../test-environment.js",
    "testTimeout": 120000
  }
}
